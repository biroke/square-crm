<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>square</groupId>
	<artifactId>square-composant-ged</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>

	<parent>
		<groupId>scub-foundation.base.superpom</groupId>
		<artifactId>scub-foundation-superpom-client-gwt</artifactId>
		<version>3.5.1</version>
	</parent>

	<build>
		<directory>target</directory>
		<sourceDirectory>src/main/java</sourceDirectory>
		<outputDirectory>target/classes</outputDirectory>

		<plugins>
			<!-- PLUGIN SPEEDUP GWT -->
			<plugin>
				<groupId>scub-foundation.base.plugins</groupId>
				<artifactId>maven-scub-foundation-gwt-speedup-plugin</artifactId>
				<configuration>
					<pathModuleConfigFile>${project.build.sourceDirectory}/com.square.composant.ged.square
					</pathModuleConfigFile>
					<pathFilePropertiesSpeedUp>conf/${env}/filters/filters.properties
					</pathFilePropertiesSpeedUp>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>


			<!-- PLUGIN GWT -->
			<plugin>
				<groupId>scub-foundation.base.plugins</groupId>
				<artifactId>maven-scub-foundation-gwt-plugin</artifactId>
				<configuration>
					<logLevel>DEBUG</logLevel>
					<url>${project.build.finalName}/index.html</url>
					<module>com.square.composant.ged.square.GwtModule</module>
					<modules>
						<param>com.square.composant.ged.square.GwtModule</param>
					</modules>
					<warSourceDirectory>${project.build.directory}/${project.build.finalName}
					</warSourceDirectory>
					<noserver>true</noserver>
					<port>9000</port>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- PLUGIN WAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webappDirectory>${project.build.directory}/${project.build.finalName}/gwtClient
					</webappDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>square</groupId>
			<artifactId>square-document-core-model</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>square</groupId>
			<artifactId>square-core-model</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>smatis</groupId>
			<artifactId>smatis-utilisateurs-noyau-model</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>square</groupId>
			<artifactId>square-composants-graphiques-lib</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>acegisecurity</groupId>
			<artifactId>acegi-security-cas</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>acegisecurity</groupId>
			<artifactId>acegi-security-cas-client</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>ehcache</groupId>
			<artifactId>ehcache</artifactId>
		</dependency>
		<dependency>
			<groupId>com.googlecode.gwtupload</groupId>
			<artifactId>gwtupload</artifactId>
			<version>0.6.1</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>2.5.6</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>2.5.6</version>
		</dependency>
		<dependency>
			<groupId>gwt-sl</groupId>
			<artifactId>gwt-sl</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-core</artifactId>
		</dependency>
	</dependencies>
</project>